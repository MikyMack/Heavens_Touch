	<section class="gallery-section" style="background:#f9f8f6; padding:50px 0;">
		<div class="container">
			<div id="gallery-grid" class="row g-4">
				<% if (galleryItems.length === 0) { %>
					<div class="col-12 text-center text-muted fs-5 pb-5">No gallery items available.</div>
				<% } else { %>
					<% galleryItems.forEach(function(item, idx) { %>
						<div class="col-sm-6 col-md-4 col-lg-3">
							<img 
								src="<%= item.image %>" 
								alt="<%= item.title || 'Gallery image' %>" 
								class="img-fluid mb-2 gallery-thumbnail" 
								style="aspect-ratio:4/3; width:100%; object-fit:cover;" 
								data-gallery-index="<%= idx %>"
								loading="lazy" />
						</div>
					<% }); %>
				<% } %>
			</div>
			<% if (totalPages > 1) { %>
				<div class="d-flex justify-content-center mt-4">
					<nav>
						<ul class="pagination" id="gallery-pagination" style="gap:6px;">
							<% if (currentPage > 1) { %>
								<li class="page-item">
									<a class="page-link" href="?page=<%= currentPage - 1 %>&perPage=<%= perPage %>">&laquo;</a>
								</li>
							<% } %>
							
							<% 
							const pageSpread = 2;
							let startPage = Math.max(1, currentPage - pageSpread);
							let endPage = Math.min(totalPages, currentPage + pageSpread);
							if (endPage - startPage < (2 * pageSpread)) {
								if (startPage === 1) {
									endPage = Math.min(totalPages, startPage + (2 * pageSpread));
								} else if (endPage === totalPages) {
									startPage = Math.max(1, endPage - (2 * pageSpread));
								}
							}
							for (let i = startPage; i <= endPage; i++) { 
							%>
								<li class="page-item<%= (i === currentPage ? ' active' : '') %>">
									<a class="page-link" href="?page=<%= i %>&perPage=<%= perPage %>"><%= i %></a>
								</li>
							<% } %>
							
							<% if (currentPage < totalPages) { %>
								<li class="page-item">
									<a class="page-link" href="?page=<%= currentPage + 1 %>&perPage=<%= perPage %>">&raquo;</a>
								</li>
							<% } %>
						</ul>
					</nav>
				</div>
			<% } %>
		</div>
