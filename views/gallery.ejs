	<script>
	// Get gallery items passed from backend
	const galleryItems = <%- JSON.stringify(galleryItems || []) %>;
	let currentModalIdx = null;
	const galleryGrid = document.getElementById('gallery-grid');
	const galleryModal = document.getElementById('gallery-modal');
	const galleryModalImg = document.getElementById('gallery-modal-img');
	const galleryModalClose = document.getElementById('gallery-modal-close');
	const galleryModalPrev = document.getElementById('gallery-modal-prev');
	const galleryModalNext = document.getElementById('gallery-modal-next');

	// Modal logic
	function openGalleryModal(idx) {
		currentModalIdx = idx;
		const imgObj = galleryItems[idx];
		if (!imgObj) return;
		galleryModalImg.src = imgObj.image;
		galleryModalImg.alt = imgObj.title || 'Gallery image';
		galleryModal.classList.add('active');
		galleryModal.style.display = 'flex';
		document.body.style.overflow = 'hidden';
	}
	function closeGalleryModal() {
		galleryModal.classList.remove('active');
		setTimeout(() => {
			galleryModal.style.display = 'none';
			document.body.style.overflow = '';
			galleryModalImg.src = '';
			currentModalIdx = null;
		}, 180);
	}
	function showNextModal() {
		if (currentModalIdx == null) return;
		const newIdx = (currentModalIdx + 1) % galleryItems.length;
		openGalleryModal(newIdx);
	}
	function showPrevModal() {
		if (currentModalIdx == null) return;
		const newIdx = (currentModalIdx - 1 + galleryItems.length) % galleryItems.length;
		openGalleryModal(newIdx);
	}

	// Bind thumbnails
	function initGalleryModalBindings() {
		const thumbs = galleryGrid.querySelectorAll('.gallery-thumbnail');
		thumbs.forEach((img, idx) => {
			img.addEventListener('click', function() {
				openGalleryModal(idx);
			});
		});
	}
	initGalleryModalBindings();

	// Close & navigation controls
	galleryModalClose.onclick = closeGalleryModal;
	galleryModalPrev.onclick = showPrevModal;
	galleryModalNext.onclick = showNextModal;

	// Keyboard navigation
	document.addEventListener('keydown', function(e) {
		if (!galleryModal.classList.contains('active')) return;
		if (e.key === "Escape" || e.key === "Esc") {
			closeGalleryModal();
		} else if (e.key === "ArrowRight") {
			showNextModal();
		} else if (e.key === "ArrowLeft") {
			showPrevModal();
		}
	});

	// Click/tap outside to close
	galleryModal.addEventListener('mousedown', function(e) {
		if (e.target === galleryModal) { closeGalleryModal(); }
	});
	galleryModal.addEventListener('touchstart', function(e) {
		if (e.target === galleryModal) { closeGalleryModal(); }
	});

	// If user changes page (with classic GET navigation), scroll to gallery-grid
	document.addEventListener('DOMContentLoaded', function(){
		if (window.location.hash === '#gallery') {
			const el = document.getElementById('gallery-grid');
			if (el) el.scrollIntoView({behavior: "smooth"});
		}
	});

	// Optional: after pageload, re-bind modal handlers if the DOM is replaced by AJAX (not required here, but safe to leave)
	if (window.MutationObserver) {
		const observer = new MutationObserver(function() {
			initGalleryModalBindings();
		});
		observer.observe(galleryGrid, {childList: true});
	}
	</script>
